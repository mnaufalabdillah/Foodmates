<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Details"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat" />

    <FrameLayout
        android:id="@+id/shapebackgroudhome"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/abu" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal">
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="DATE"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"/>
                <TextView
                    android:layout_column="2"
                    android:layout_width="wrap_content"
                    android:text="FROM"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"/>
                <TextView
                    android:layout_column="3"
                    android:layout_width="wrap_content"
                    android:text="UNTIL"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"/>
            </TableRow>
            <TableRow>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:hint="Date"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_column="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:hint="Time Start"
                        android:textColorHint="@color/white"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_column="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:hint="Time End"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:layout_marginTop="150dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/comfortaa"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginHorizontal="20dp">
            <EditText
                android:background="@drawable/notes_text_border"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:hint="Your notes here"
                android:layout_height="100dp"
                android:layout_width="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total : RpXXX.XXX"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/comfortaa"
            android:layout_gravity="right"
            android:layout_marginTop="300dp"
            android:layout_marginHorizontal="20dp"
            />
    </FrameLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/roboto_black"
        android:text="B O O K"
        android:textColor="@android:color/white" />

</RelativeLayout>
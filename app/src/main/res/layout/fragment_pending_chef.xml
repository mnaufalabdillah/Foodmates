<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Pending Detail"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <FrameLayout
        android:id="@+id/shapebackgroudhome"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/abu">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="53dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="53dp"
                android:layout_marginBottom="282dp"
                android:orientation="horizontal">

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:text="DATE"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:text="FROM"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="3"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:text="UNTIL"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1">

                        <EditText
                            android:id="@+id/book_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center_horizontal"
                            android:hint="Pick Date"
                            android:textColor="@color/white"
                            android:textColorHint="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="2">

                        <EditText
                            android:id="@+id/time_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center_horizontal"
                            android:hint="Pick Time"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="3">

                        <EditText
                            android:id="@+id/time_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center_horizontal"
                            android:hint="Pick Time"
                            android:textColor="@color/white"
                            android:textColorHint="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/nama_cust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="68dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="77dp"
                android:layout_marginBottom="249dp"
                android:fontFamily="@font/comfortaa"
                android:text="Nama Customer"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="68dp"
                android:layout_marginTop="102dp"
                android:layout_marginEnd="120dp"
                android:layout_marginBottom="225dp"
                android:fontFamily="@font/comfortaa"
                android:text="00.00 - 00.00"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="190dp"
                android:layout_marginBottom="181dp"
                android:fontFamily="@font/comfortaa"
                android:text="Notes"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="68dp">

                <EditText
                    android:id="@+id/edtNotes"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:background="@drawable/notes_text_border"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="center"
                    android:hint="Your notes here"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="340dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="Total : $"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/total_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="XXX.XXX"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/profilpicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="234dp"
                android:layout_marginBottom="210dp"
                android:tint="@color/white"
                android:src="@drawable/mdi_account_circle" />
        </RelativeLayout>

    </FrameLayout>


    <Button
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/roundedbutton2"
        android:backgroundTint="#008000"
        android:text="accept" />

    <Button
        android:id="@+id/btn_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/roundedbutton2"
        android:backgroundTint="#FF0000"
        android:text="decline" />

    <Button
        android:id="@+id/btn_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/roboto_black"
        android:text="B O O K"
        android:textColor="@android:color/white" />

</RelativeLayout>
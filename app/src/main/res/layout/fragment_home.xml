<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, "
        android:textSize="33sp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="70dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed-medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How is Life?"
        android:textSize="27sp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="128dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed-medium" />

    <FrameLayout
        android:id="@+id/shapebackgroudhome"
        android:layout_width="307dp"
        android:layout_height="345dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/abu" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Chef"
            android:textColor="@android:color/white"
            android:textSize="33sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_book_chef"
            android:backgroundTint="@color/white"
            android:layout_margin="20dp"
            android:layout_gravity="end"
            android:contentDescription="SearchChef" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="70dp"
            android:layout_marginHorizontal="30dp"
            android:drawableTop="@drawable/mdi_account_circle"
            android:padding="20dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/yellow"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="70dp"
            android:layout_marginHorizontal="30dp"
            android:drawableTop="@drawable/mdi_account_circle"
            android:padding="20dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/yellow"
            />

        <RadioGroup
            android:id="@+id/swipe_chef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="120dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioSwipe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="@color/white" />

            <RadioButton
                android:id="@+id/radioSwipe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white" />
        </RadioGroup>
    </FrameLayout>
</RelativeLayout>
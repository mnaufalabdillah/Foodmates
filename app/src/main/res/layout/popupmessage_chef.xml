<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_marginHorizontal="25dp"
    android:padding="5dp"
    android:background="@drawable/roundedbutton"
    android:backgroundTint="@color/abu"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/btn_exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="X"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circlebackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/comfortaa"
            android:text="Order just\ncompleted"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/mdi_account_circle"
            android:tint="@color/white"/>

        <TextView
            android:id="@+id/nama_cust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/photos"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="Nama Customer"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/comfortaa"/>

        <TextView
            android:id="@+id/location_cust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_cust"
            android:layout_toEndOf="@id/photos"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="Location : Dramaga"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/comfortaa"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_cust"
            android:layout_toEndOf="@id/photos"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="00.00 - 00.00"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/comfortaa"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/roboto"
        android:text="C O M P L E T E"
        android:textColor="@color/white" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:backgroundTint="@color/yellow"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/order_photochef"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="7.5dp"
            android:src="@drawable/mdi_account_circle"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight = "10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/order_namachef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Chef"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/order_umurchef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Umur"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/order_spesialisasichef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spesialist"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/order_hubungichef"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/telp"
        android:layout_gravity="center|end"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:onClick="onDialButton"/>

</androidx.cardview.widget.CardView>